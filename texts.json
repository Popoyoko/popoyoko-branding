{
  "families": {
    "Albert Sans": "https://fonts.googleapis.com/css?family=Albert+Sans&display=swap"
  },
  "typeSystem": {
    "body": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "16px",
      "fontWeight": "normal"
    },
    "h1": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "4rem",
      "fontWeight": "bold"
    },
    "h2": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "3rem",
      "fontWeight": "bold"
    },
    "h3": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "2rem",
      "fontWeight": "bold"
    },
    "h4": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "1.5rem",
      "fontWeight": "bold"
    },
    "p": {
      "family": "Albert Sans",
      "familyFallback": "sans-serif",
      "fontSize": "1rem",
      "fontWeight": "normal"
    }
  }
}
